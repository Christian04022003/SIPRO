// tsconfig.node.json (Ejemplo para Vite)
{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ES2022",
    "moduleResolution": "node", // Generalmente 'node' o 'nodeNext' para Node.js
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["vite.config.ts"] // Incluye tus archivos de configuraci√≥n
}
